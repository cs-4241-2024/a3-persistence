<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Birthday Tracker - Manage Your Birthdays</title>
    <meta
      name="description"
      content="Birthday Tracker helps you keep track of important birthdays and calculate ages and days until the next birthday."
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .welcome-text { margin-bottom: 15px; text-align: center; font-weight:
      bold; } .container { max-width: 900px; } .card { box-shadow: 0 4px 8px
      rgba(0, 0, 0, 0.1); } #signout { margin-top: 20px; display: block; }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="welcome-text h3">Welcome, {{username}}</div>

      <div class="card mb-4">
        <div class="card-body">
          <form
            id="birthday-form"
            action="/form"
            method="POST"
            class="row g-3"
            aria-label="Add a birthday"
          >
            <div class="col-md-6">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Name"
                class="form-control"
                required
                aria-required="true"
              />
            </div>
            <div class="col-md-6">
              <label for="birthday" class="form-label">Birthday</label>
              <input
                type="date"
                id="birthday"
                name="birthday"
                class="form-control"
                required
                aria-required="true"
              />
            </div>
            <div class="col-md-12">
              <button
                type="submit"
                class="btn btn-primary w-100"
              >Submit</button>
            </div>
          </form>
        </div>
      </div>

      <h2 class="h4 mb-3">Your Birthday Entries</h2>

      <table
        class="table table-striped table-bordered"
        aria-label="Birthday entries"
      >
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Birthday</th>
            <th>Days Until Next Birthday</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each birthdays}}
            <tr>
              <td>
                <form
                  action="/edit-name/{{this._id}}"
                  method="POST"
                  class="edit-form"
                >
                  <div class="input-group">
                    <input
                      type="text"
                      name="name"
                      value="{{this.name}}"
                      class="form-control"
                      readonly
                    />
                    <button
                      type="button"
                      class="btn btn-warning edit-btn"
                    >Edit</button>
                    <button
                      type="submit"
                      class="btn btn-success save-btn"
                      style="display:none;"
                    >Save</button>
                  </div>
                </form>
              </td>
              <td>{{this.age}}</td>
              <td>
                <form
                  action="/edit-birthday/{{this._id}}"
                  method="POST"
                  class="edit-birthday-form"
                >
                  <div class="input-group">
                    <input
                      type="date"
                      name="birthday"
                      value="{{this.birthday}}"
                      class="form-control"
                      readonly
                    />
                    <button
                      type="button"
                      class="btn btn-warning edit-birthday-btn"
                    >Edit</button>
                    <button
                      type="submit"
                      class="btn btn-success save-birthday-btn"
                      style="display:none;"
                    >Save</button>
                  </div>
                </form>
              </td>
              <td>{{this.daysUntilNextBirthday}}</td>
              <td>
                <form
                  action="/delete/{{this._id}}"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this entry?');"
                >
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      <div class="text-center">
        <form action="/signout" method="POST">
          <button id="signout" type="submit" class="btn btn-danger">Sign Out</button>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="/main.js"></script>
  </body>
</html>